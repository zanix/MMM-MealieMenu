  "main": "MMM-MealieMenu.js",
  "scripts": {
    "lint": "eslint && stylelint **/*.css && markdownlint . --ignore node_modules && prettier . --check",
    "lint:fix": "eslint --fix && stylelint **/*.css --fix && markdownlint . --ignore node_modules --fix && prettier . --write",
    "markdownlint": "markdownlint . --ignore node_modules",
    "prepare": "[ -f node_modules/.bin/husky ] && husky || echo husky is not installed.",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "test": "npm run lint"
  },
  "lint-staged": {
    "!(*.css|*.md)": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.md": [
      "markdownlint --ignore node_modules --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^7.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.3.1",
    "eslint": "^9.24.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-package-json": "^0.29.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "markdownlint-cli": "^0.44.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-prettier": "^5.0.3"
  },
  "engines": {
    "node": ">=22.14.0"
  }
}
